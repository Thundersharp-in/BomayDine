<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="180dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="6dp"
    android:layout_marginHorizontal="@dimen/dimen_10dp"
    android:layout_marginVertical="@dimen/dimen_7dp"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="#232329">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="180dp">

        <LinearLayout
            android:id="@+id/l_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cardCornerRadius="7dp"
                app:cardElevation="4dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="#151515"
                android:layout_marginBottom="10dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_outline_table_bar_24"
                    android:padding="@dimen/dimen_10dp"
                    app:tint="#FFEB3B" />
            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/orderid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#B8BABD"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="15sp"
                    android:text="Table booking (Dine-in)"
                    android:maxLines="1"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/el_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:fontFamily="sans-serif"
                    android:textSize="13sp"
                    android:textColor="#AAAAAA"
                    android:text="Booking for : Hrishikesh Prateek, XXXXXXX135"
                    android:ellipsize="end"/>

            </LinearLayout>

        </LinearLayout>

        <View
            android:id="@+id/view_top"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_marginTop="5dp"
            android:background="#B5B5B5"
            android:layout_below="@id/l_top"
            android:layout_marginHorizontal="10dp"/>

        <LinearLayout
            android:id="@+id/view_ed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="10dp"
            android:layout_below="@id/view_top"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:fontFamily="sans-serif-smallcaps"
                android:textSize="13sp"
                android:textColor="#C6C6C6"
                android:text="BOOKING DATE AND TIME"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/allitems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:fontFamily="sans-serif"
                android:textSize="13sp"
                android:textColor="#DCA609"
                android:text="26th December 2021 (Upcoming)"
                android:ellipsize="end"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:fontFamily="sans-serif-smallcaps"
                android:textSize="13sp"
                android:textColor="#C6C6C6"
                android:text="TOTAL GUESTS AND TABLES"
                android:layout_marginTop="10dp"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/order_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:fontFamily="sans-serif-light"
                android:textSize="13sp"
                android:textColor="#AAAAAA"
                android:text="1 table(s) for 4 Guest(s)"
                android:ellipsize="end"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:fontFamily="sans-serif-smallcaps"
                android:textSize="13sp"
                android:textColor="#C6C6C6"
                android:text="ADD-ONS"
                android:layout_marginTop="10dp"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/total_amat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:fontFamily="sans-serif"
                android:textSize="13sp"
                android:textColor="#AAAAAA"
                android:text="Wifi Access, Romantic Environment Setup,Smoking room."
                android:ellipsize="end"/>

            <View
                android:id="@+id/view_bottom"
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:background="#B5B5B5"/>

        </LinearLayout>

        <TextView
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_ed"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="12dp"
            android:ellipsize="end"
            android:fontFamily="sans-serif"
            android:maxLines="1"
            android:text="Table (s) Allotted : BTH09"
            android:textColor="#8BC34A"
            android:textSize="13sp" />


    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>