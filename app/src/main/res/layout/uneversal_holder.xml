<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="150dp"
    app:cardBackgroundColor="#22242c"
    app:cardCornerRadius="7dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageview"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/homestatic" />

            <View
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_gravity="bottom"
                android:background="@drawable/custom_gradient_bottom"/>

        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="40dp">
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-smallcaps"
                android:layout_alignParentTop="true"
                android:text="Breakfast"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textColor="#B8BABD"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="7dp"
                android:layout_below="@id/name"
                android:fontFamily="sans-serif-smallcaps"
                android:text="Rs. 138.0"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textColor="#959698"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/description"
                android:layout_below="@id/amount"
                android:layout_toStartOf="@+id/eholder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Breaking out of the norm doesn't get more louis ipson trufr esds lour "
                android:layout_marginEnd="20dp"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/calibri"
                android:layout_marginBottom="10dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="#686868"
                />


            <RelativeLayout
                android:id="@+id/eholder"
                android:layout_width="75dp"
                android:layout_height="28dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/stroke_only"
                android:layout_marginEnd="10dp"
                android:layout_centerVertical="true">

                <LinearLayout
                    android:id="@+id/initial"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:visibility="visible"
                    android:weightSum="5">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/calibri"
                        android:text="ADD"
                        android:layout_marginStart="7dp"
                        android:layout_weight="3.3"
                        android:textAllCaps="false"
                        android:textColor="#959698"
                        android:textSize="14sp"
                        android:textAlignment="center"
                        android:layout_gravity="center_vertical"
                        tools:ignore="RtlCompat" />

                    <ImageButton
                        android:id="@+id/plusinit"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.7"
                        android:background="@null"
                        android:src="@drawable/ic_baseline_add_24"
                        android:tint="#959698"/>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/finl"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:weightSum="6">
                    <ImageButton
                        android:id="@+id/plus"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:background="@null"
                        android:layout_marginStart="7dp"
                        android:layout_marginVertical="5dp"
                        android:paddingEnd="5dp"
                        android:paddingStart="5dp"
                        android:src="@drawable/ic_baseline_horizontal_rule_24"
                        android:tint="#959698"/>

                    <TextView
                        android:id="@+id/displaytext"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/calibri"
                        android:text="1"
                        android:layout_weight="2"
                        android:textAllCaps="false"
                        android:textColor="#959698"
                        android:textSize="14sp"
                        android:textAlignment="center"
                        android:layout_gravity="center_vertical"
                        tools:ignore="RtlCompat" />

                    <ImageButton
                        android:id="@+id/minus"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:background="@null"
                        android:layout_marginEnd="7dp"
                        android:layout_marginVertical="5dp"
                        android:src="@drawable/ic_baseline_add_24"
                        android:tint="#959698"/>

                </LinearLayout>


            </RelativeLayout>


        </RelativeLayout>



    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
