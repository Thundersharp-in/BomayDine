<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#1e2026"
    android:id="@+id/containermain"
    tools:context=".user.ui.home.HomeFragment">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="300dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/homestatic"
                        android:adjustViewBounds="true" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_gravity="bottom"
                        android:elevation="4dp"
                        android:background="@drawable/custom_gradient_bottom"/>
                </FrameLayout>

                <RelativeLayout
                    android:id="@+id/rel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="4dp">

                    <LinearLayout
                        android:id="@+id/current_loc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_toStartOf="@id/qrcode"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="15dp">
                        <TextView
                            android:id="@+id/textcurrloc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#fff"
                            android:drawableStart="@drawable/ic_outline_pin_drop_24"
                            android:drawablePadding="10dp"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_marginEnd="15dp"
                            android:text="Click to choose Location "
                            android:fontFamily="@font/calibri"
                            android:textSize="20sp"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="1.2dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="15dp"
                            android:background="#fff"/>

                    </LinearLayout>


                    <ImageView
                        android:id="@+id/qrcode"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/ic_baseline_qr_code_scanner_24"
                        android:layout_toStartOf="@id/profile"
                        android:layout_marginBottom="10dp"
                        android:layout_gravity="end"/>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="15dp"
                        android:src="@drawable/prateek"
                        android:layout_marginBottom="10dp"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="end"/>


                </RelativeLayout>


                <LinearLayout
                    android:id="@+id/search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:background="@drawable/curved_dark"
                    android:elevation="7dp"
                    android:layout_marginTop="10dp"
                    android:minHeight="52dp"
                    android:layout_below="@id/rel"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="15dp"
                        app:tint="#ff995e"
                        android:src="@drawable/ic_baseline_search_24"/>


                    <EditText
                        android:id="@+id/search_home"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="10dp"
                        android:background="@null"
                        android:hint="Search "
                        android:layout_marginStart="10dp"
                        android:inputType="text"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="#d3d3d3"
                        android:textColorHint="#b7b7b7" />
                </LinearLayout>

                <com.glide.slider.library.SliderLayout
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:id="@+id/slider"
                    android:layout_below="@id/search"
                    android:elevation="6dp"
                    app:indicator_visibility="invisible"
                    android:layout_marginTop="15dp"
                    android:layout_marginHorizontal="15dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/slider">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/recent"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="15dp"
                            android:background="@drawable/curved_dark"
                            android:elevation="4dp"
                            android:minHeight="50dp"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp">

                                <TextView
                                    android:id="@+id/text2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="10dp"
                                    android:fontFamily="sans-serif-smallcaps"
                                    android:text="Recent orders"
                                    android:textColor="#B8BABD"
                                    android:textSize="17sp"
                                    android:textStyle="bold" />


                                <TextView
                                    android:id="@+id/recentorders"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="15dp"
                                    android:layout_marginEnd="15dp"
                                    android:text="View Orders"
                                    android:textColor="#ff975d"
                                    android:textSize="13sp" />


                            </RelativeLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginEnd="15dp"
                                android:layout_marginBottom="10dp"
                                android:text="View your 6 recent orders if you are craving to have your last order again !!"
                                android:textColor="#959698"
                                android:textSize="13sp" />


                        </LinearLayout>


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="15dp"
                                android:fontFamily="sans-serif-smallcaps"
                                android:text="Daily food"
                                android:textColor="#E4E4E4"
                                android:textSize="17sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="15dp"
                                android:layout_marginEnd="15dp"
                                android:text="View all"
                                android:textColor="#ff975d"
                                android:textSize="13sp"
                                android:visibility="gone" />


                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:minHeight="140dp"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/breakfast"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:minHeight="130dp"
                                app:cardBackgroundColor="#22242c"
                                app:cardCornerRadius="7dp"
                                app:cardElevation="5dp"
                                app:cardUseCompatPadding="true">

                                <ImageView
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/breakfast"
                                    app:tint="#9e9fa2" />

                            </com.google.android.material.card.MaterialCardView>

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/lunch"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:minHeight="130dp"
                                app:cardBackgroundColor="#22242c"
                                app:cardCornerRadius="7dp"
                                app:cardElevation="5dp"
                                app:cardUseCompatPadding="true">

                                <ImageView
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/food"
                                    app:tint="#9e9fa2" />


                            </com.google.android.material.card.MaterialCardView>

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/dinner"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:minHeight="130dp"
                                app:cardBackgroundColor="#22242c"
                                app:cardCornerRadius="7dp"
                                app:cardElevation="5dp"
                                app:cardUseCompatPadding="true">

                                <ImageView
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/dinner"
                                    app:tint="#9e9fa2" />


                            </com.google.android.material.card.MaterialCardView>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="sans-serif-smallcaps"
                                android:text="Breakfast"
                                android:textAlignment="center"
                                android:textAllCaps="false"
                                android:textColor="#959698"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="sans-serif-smallcaps"
                                android:text="Lunch"
                                android:textAlignment="center"
                                android:textAllCaps="false"
                                android:textColor="#959698"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="sans-serif-smallcaps"
                                android:text="Dinner"
                                android:textAlignment="center"
                                android:textAllCaps="false"
                                android:textColor="#959698"
                                android:textSize="14sp"
                                android:textStyle="bold" />


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/category"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="15dp"
                                    android:fontFamily="sans-serif-smallcaps"
                                    android:text="Category"
                                    android:textColor="#E4E4E4"
                                    android:textSize="17sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/allcategory"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="15dp"
                                    android:layout_marginEnd="15dp"
                                    android:text="View all"
                                    android:textColor="#ff975d"
                                    android:textSize="13sp" />


                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@null">

                                <com.facebook.shimmer.ShimmerFrameLayout
                                    android:id="@+id/shimmerplace_cat"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@null">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@null"
                                        android:elevation="4dp"
                                        android:gravity="center_horizontal"
                                        android:orientation="vertical">

                                        <include layout="@layout/cat_placeholder" />
                                    </LinearLayout>

                                </com.facebook.shimmer.ShimmerFrameLayout>

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/recentordcategoryholderer"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:nestedScrollingEnabled="false"
                                    android:orientation="vertical"
                                    android:scrollbars="none"
                                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager" />

                            </RelativeLayout>

                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/topselling"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:id="@+id/head1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="15dp"
                                    android:fontFamily="sans-serif-smallcaps"
                                    android:text="Top selling"
                                    android:textColor="#E4E4E4"
                                    android:textSize="17sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/topsellingallv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="15dp"
                                    android:layout_marginEnd="15dp"
                                    android:text="View all"
                                    android:textColor="#ff975d"
                                    android:textSize="13sp" />


                            </RelativeLayout>

                            <com.facebook.shimmer.ShimmerFrameLayout
                                android:id="@+id/shimmerplace_topsell"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/head1"
                                android:background="@null">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@null"
                                    android:elevation="4dp"
                                    android:gravity="center_horizontal"
                                    android:orientation="vertical">

                                    <include layout="@layout/cat_topselling" />
                                </LinearLayout>

                            </com.facebook.shimmer.ShimmerFrameLayout>

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/topsellingholder"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/head1"
                                android:layout_marginTop="10dp"
                                android:nestedScrollingEnabled="false"
                                android:orientation="horizontal"
                                android:scrollbars="none"
                                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                        </RelativeLayout>

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginTop="20dp"
                            app:cardBackgroundColor="#1e2026"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="7dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:adjustViewBounds="true"
                                android:scaleType="centerCrop"
                                android:src="@drawable/bbbbb" />


                        </com.google.android.material.card.MaterialCardView>

                        <RelativeLayout
                            android:id="@+id/full"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:id="@+id/hhhh"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="15dp"
                                    android:fontFamily="sans-serif-smallcaps"
                                    android:text="All items"
                                    android:textColor="#E4E4E4"
                                    android:textSize="17sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/allitemsview"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="15dp"
                                    android:layout_marginEnd="15dp"
                                    android:text="View all"
                                    android:textColor="#ff975d"
                                    android:textSize="13sp" />


                            </RelativeLayout>

                            <com.facebook.shimmer.ShimmerFrameLayout
                                android:id="@+id/shimmerplace_allitem"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/hhhh"
                                android:layout_marginTop="10dp"
                                android:background="@null">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@null"
                                    android:elevation="4dp"
                                    android:gravity="center_horizontal"
                                    android:orientation="vertical">

                                    <include layout="@layout/all_item_placeholder" />

                                    <include layout="@layout/all_item_placeholder" />
                                </LinearLayout>

                            </com.facebook.shimmer.ShimmerFrameLayout>

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/allitems"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/hhhh"
                                android:layout_marginTop="10dp"
                                android:nestedScrollingEnabled="false"
                                android:orientation="vertical"
                                android:scrollbars="none"
                                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="60dp">

                            <TextView
                                android:id="@+id/tag"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_marginStart="20dp"
                                android:fontFamily="@font/amaranth_bold_italic"
                                android:text="@string/app_name"
                                android:textColor="#9C9C9C"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/tag"
                                android:layout_marginStart="-10dp"
                                android:layout_toEndOf="@id/tag"
                                android:fontFamily="@font/arizonia"
                                android:text="Great food above !"
                                android:textColor="#A6A7A8"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/version"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentBottom="true"
                                android:layout_marginEnd="15dp"
                                android:fontFamily="sans-serif-light"
                                android:text="V 2.1.89"
                                android:textColor="#969697"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                        </RelativeLayout>
                    </LinearLayout>

                </RelativeLayout>


            </RelativeLayout>

    </androidx.core.widget.NestedScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <RelativeLayout
        android:id="@+id/bottomnoti"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/curve_top"
        android:layout_alignParentBottom="true"
        android:elevation="7dp">

        <LinearLayout
            android:id="@+id/end_con"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:elevation="4dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/view_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="15dp"
                android:textColor="#ff975d"
                android:text="VIEW"
                android:textSize="11sp"/>


            <ImageView
                android:id="@+id/clearcompleate"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:tint="#B11F51"
                android:src="@drawable/ic_baseline_close_24"/>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:cardCornerRadius="7dp"
            app:cardElevation="4dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            app:cardBackgroundColor="#1e2026">

            <ImageView
                android:src="@drawable/lunch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/demoimg"
                android:scaleType="centerCrop"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/bottom_clickable_linear"
            android:layout_toEndOf="@id/card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/view_headding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="sans-serif-smallcaps"
                android:layout_marginEnd="15dp"
                android:textColor="#D5D5D5"
                android:text="Complete your order"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/view_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/calibri"
                android:layout_marginEnd="15dp"
                android:textColor="#9F9F9F"
                android:text="You have saved items in your cart"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="13sp"/>


        </LinearLayout>



    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bottomnoti_order"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/curve_top"
        android:layout_alignParentBottom="true"
        android:elevation="7dp">

        <LinearLayout
            android:id="@+id/end_con_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:elevation="4dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/view_action_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="15dp"
                android:textColor="#ff975d"
                android:text="VIEW"
                android:textSize="11sp"/>


            <ImageView
                android:id="@+id/clearcompleate_order"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:tint="#B11F51"
                android:src="@drawable/ic_baseline_close_24"/>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_order"
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:cardCornerRadius="7dp"
            app:cardElevation="4dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            app:cardBackgroundColor="#1e2026">

            <ImageView
                android:src="@drawable/lunch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/demoimg_order"
                android:scaleType="centerCrop"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/bottom_clickable_linear_order"
            android:layout_toEndOf="@id/card_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/view_headding_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="sans-serif-smallcaps"
                android:layout_marginEnd="15dp"
                android:textColor="#D5D5D5"
                android:text="Order In Progress"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/view_desc_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/calibri"
                android:layout_marginEnd="15dp"
                android:textColor="#9F9F9F"
                android:text="You have some orders in progress..."
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="13sp"/>


        </LinearLayout>



    </RelativeLayout>

</RelativeLayout>