<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#1e2026">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notifications"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:fontFamily="@font/coiny"
        android:textColor="#FFAB7E"
        android:layout_marginStart="20dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/curve_top"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="-5dp"
        android:layout_marginEnd="-5dp"
        android:layout_marginTop="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="7dp"
            >
            <!--  todo use recyclerView -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="#22242c"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="-10dp"
                android:layout_marginTop="10dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="@drawable/end_round"
                    android:layout_marginEnd="-10dp"
                    android:padding="7dp"
                    >
                    <LinearLayout
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="5dp"
                        android:orientation="vertical"
                        >
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/papad"
                            android:layout_gravity="center"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="12:40 am"
                            android:gravity="center"
                            android:textSize="13sp"
                            android:textColor="#fff"
                            android:layout_marginTop="4dp"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="15dp"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Your Orders"
                            android:drawablePadding="10dp"
                            android:maxLines="1"
                            android:textSize="16sp"
                            android:fontFamily="@font/calibrib"
                            android:textColor="#F6F9FF"
                            android:gravity="center_vertical"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Details\n 1"
                            android:maxLines="2"
                            android:drawablePadding="10dp"
                            android:fontFamily="sans-serif-condensed"
                            android:textColor="#F6F9FF"
                            android:layout_marginTop="2dp"
                            android:textSize="13sp"
                            android:gravity="center_vertical"
                            />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="#22242c"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="-10dp"
                android:layout_marginTop="10dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="@drawable/end_round"
                    android:layout_marginEnd="-10dp"
                    android:padding="7dp"
                    >
                    <LinearLayout
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="5dp"
                        android:orientation="vertical"
                        >
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/papad"
                            android:layout_gravity="center"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="12:40 am"
                            android:gravity="center"
                            android:textSize="13sp"
                            android:textColor="#fff"
                            android:layout_marginTop="4dp"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="15dp"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Your Orders"
                            android:drawablePadding="10dp"
                            android:maxLines="1"
                            android:textSize="16sp"
                            android:fontFamily="@font/calibrib"
                            android:textColor="#F6F9FF"
                            android:gravity="center_vertical"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Details\n 1"
                            android:maxLines="2"
                            android:drawablePadding="10dp"
                            android:fontFamily="sans-serif-condensed"
                            android:textColor="#F6F9FF"
                            android:layout_marginTop="2dp"
                            android:textSize="13sp"
                            android:gravity="center_vertical"
                            />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="#22242c"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="-10dp"
                android:layout_marginTop="10dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="@drawable/end_round"
                    android:layout_marginEnd="-10dp"
                    android:padding="7dp"
                    >
                    <LinearLayout
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="5dp"
                        android:orientation="vertical"
                        >
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/papad"
                            android:layout_gravity="center"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="12:40 am"
                            android:gravity="center"
                            android:textSize="13sp"
                            android:textColor="#fff"
                            android:layout_marginTop="4dp"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="15dp"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Your Orders"
                            android:drawablePadding="10dp"
                            android:maxLines="1"
                            android:textSize="16sp"
                            android:fontFamily="@font/calibrib"
                            android:textColor="#F6F9FF"
                            android:gravity="center_vertical"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Details\n 1"
                            android:maxLines="2"
                            android:drawablePadding="10dp"
                            android:fontFamily="sans-serif-condensed"
                            android:textColor="#F6F9FF"
                            android:layout_marginTop="2dp"
                            android:textSize="13sp"
                            android:gravity="center_vertical"
                            />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </RelativeLayout>


</LinearLayout>