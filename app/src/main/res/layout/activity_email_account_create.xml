<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.ui.login.EmailAccountCreate">


    <ImageView
        android:id="@+id/imgPlaylistItemBg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:maxHeight="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/logologin" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="4dp"
        android:orientation="vertical"
        android:weightSum="3">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8">

            <TextView
                android:id="@+id/phoneback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/btn_blk"
                android:fontFamily="@font/calibrib"
                android:gravity="center"
                android:minHeight="30dp"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:text="Skip now"
                android:textAllCaps="false"
                android:textColor="#E3E3E3" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:elevation="4dp"
                android:fontFamily="@font/amita_bold"
                android:text="Delicious food ahead !"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="25sp"
                android:textStyle="bold"
                tools:ignore="RtlCompat" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.7"
            android:gravity="top"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:background="@drawable/edittext_curved"
                android:elevation="7dp"
                android:minHeight="52dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="10dp"
                    android:background="@null"
                    android:hint="Your name"
                    android:drawableStart="@drawable/ic_outline_badge_24"
                    android:drawablePadding="10dp"
                    android:inputType="textEmailAddress"
                    android:textColor="#252525"
                    android:drawableTint="#6C6C6C"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColorHint="#b7b7b7" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:background="@drawable/edittext_curved"
                android:elevation="7dp"
                android:minHeight="52dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="10dp"
                    android:background="@null"
                    android:hint="Email address"
                    android:drawableStart="@drawable/ic_outline_alternate_email_24"
                    android:drawablePadding="10dp"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="#252525"
                    android:drawableTint="#6C6C6C"
                    android:textColorHint="#b7b7b7" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:background="@drawable/edittext_curved"
                android:elevation="7dp"
                android:minHeight="52dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="10dp"
                    android:background="@null"
                    android:drawableStart="@drawable/ic_baseline_password_24"
                    android:drawablePadding="10dp"
                    android:hint="Create a password"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="#252525"
                    android:drawableTint="#6C6C6C"
                    android:textColorHint="#b7b7b7" />



            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:background="@drawable/edittext_curved"
                android:elevation="7dp"
                android:minHeight="52dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/confpassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="10dp"
                    android:background="@null"
                    android:drawableStart="@drawable/ic_baseline_password_24"
                    android:drawablePadding="10dp"
                    android:hint="Re-enter password"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="#252525"
                    android:drawableTint="#6C6C6C"
                    android:textColorHint="#b7b7b7" />


            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="10dp"
                android:drawableStart="@drawable/ic_outline_info_24"
                android:drawablePadding="10dp"
                android:fontFamily="@font/calibri"
                android:gravity="center"
                android:text="Create your account only by email."
                android:textAlignment="viewStart"
                android:textColor="#E3E3E3"
                app:drawableTint="#FFEB3B"
                tools:ignore="RtlCompat" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_curved_round"
                android:minHeight="52dp"
                android:text="CREATE ACCOUNT"
                android:textAllCaps="false"
                android:textColor="#dddddd"
                android:textSize="16sp" />


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:gravity="bottom"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/emaillogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/tos"
                android:layout_marginBottom="10dp"
                android:layout_marginHorizontal="15dp"
                android:background="@drawable/edittext_curved"
                android:elevation="7dp"
                android:minHeight="52dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:drawableStart="@drawable/ic_outline_account_circle_24"
                    android:drawablePadding="-30dp"
                    android:fontFamily="@font/calibri"
                    android:gravity="center"
                    android:text="Have a account ? Login"
                    android:textColor="#252525"
                    android:drawableTint="#6C6C6C"
                    android:textSize="18sp" />


            </LinearLayout>


            <TextView
                android:id="@+id/tos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginHorizontal="15dp"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/calibri"
                android:text="By continuning you are agreeing to our \nTerms of service, privacy policy, Content Policy."
                android:textAlignment="center"
                android:textColor="#E3E3E3"
                android:textSize="13sp" />

        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>