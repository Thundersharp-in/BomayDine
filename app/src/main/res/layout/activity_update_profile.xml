<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.MaterialComponents"
    android:background="#1e2026"
    tools:context=".user.ui.account.UpdateProfileActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#22242c"
            >
            <ImageView
                android:id="@+id/cover_pic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/download"
                android:scaleType="centerCrop"
                />

            <TextView
                android:id="@+id/edit_cover_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:text="Edit"
                android:background="@drawable/edittext_curved"
                android:backgroundTint="#1e2026"
                android:textColor="#fff"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:drawableTint="#fff"
                android:paddingEnd="5dp"
                android:drawableStart="@drawable/ic_baseline_camera_alt_24"
                android:drawablePadding="5dp"
                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-45dp"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_img"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/prateek"
                app:civ_border_width="2dp"
                app:civ_border_color="#1e2026"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/profile_nme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/calibrib"
            android:text="Name"
            android:textColor="#fff"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/profile_eml"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="some@some.com"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:textColor="#FFEB3B"
            android:fontFamily="@font/calibrib"
            android:textSize="14sp"
            android:textStyle="italic"
            android:layout_marginHorizontal="@dimen/dimen_10dp"
            android:ellipsize="middle"
            android:singleLine="true"
            />

        <TextView
            android:id="@+id/desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="If you want to edit your details or to verify email if not verified yet then jump to the edit details page gateway through the card mentioned just below at right side of this page."
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:textColor="#AFAFAF"
            android:fontFamily="@font/calibri"
            android:textSize="12sp"
            android:layout_marginHorizontal="10dp"
            android:textStyle="italic"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="10dp"
            >
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/edit_profile_pic"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                app:cardUseCompatPadding="true"
                app:cardElevation="5dp"
                app:cardCornerRadius="7dp"
                app:cardBackgroundColor="#22242c"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_baseline_camera_alt_24"
                        android:padding="10dp"
                        android:background="@drawable/ic_baseline_circle_24"
                        android:backgroundTint="#146AFF"
                        android:layout_margin="5dp"
                        app:tint="#C2E2FF"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Edit Profile Pic"
                        android:textColor="#fff"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center"
                        />

                </LinearLayout>


            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/edit_profile_details"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                app:cardUseCompatPadding="true"
                app:cardElevation="5dp"
                app:cardCornerRadius="7dp"
                app:cardBackgroundColor="#22242c"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_baseline_person_pin_24"
                        android:padding="10dp"
                        android:background="@drawable/ic_baseline_circle_24"
                        android:backgroundTint="#146AFF"
                        android:layout_margin="5dp"
                        app:tint="#C2E2FF"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Edit Details"
                        android:textColor="#fff"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center"
                        />

                </LinearLayout>


            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:textColor="#0098FF"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            app:cardBackgroundColor="#22242c"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@drawable/end_round"
                android:backgroundTint="#22242c"
                >
                <ImageView
                    android:id="@+id/location_img"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_outline_home_24"
                    android:padding="7dp"
                    android:background="@drawable/ic_baseline_circle_24"
                    android:backgroundTint="#146AFF"
                    app:tint="#C2E2FF"
                    android:layout_marginStart="10dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="30dp"
                    android:orientation="vertical"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginVertical="5dp"
                    >
                    <TextView
                        android:id="@+id/location_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Home"
                        android:drawablePadding="10dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textSize="16sp"
                        android:fontFamily="@font/calibrib"
                        android:textColor="#F6F9FF"
                        android:gravity="center_vertical"
                        />
                    <TextView
                        android:id="@+id/last_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Near some area at some place near a town "
                        android:drawablePadding="10dp"
                        android:fontFamily="sans-serif-condensed"
                        android:textColor="#F6F9FF"
                        android:layout_marginTop="2dp"
                        android:textSize="13sp"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="5dp"
                        android:ellipsize="end"
                        android:maxLines="2"
                        />


                </LinearLayout>

            </LinearLayout>


        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/btn_location_overview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="7dp"
            app:cardBackgroundColor="#22242c"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true"
            android:background="#22242c"
            android:layout_marginTop="8dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="8dp"
                android:gravity="center"
                >
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_outline_pin_drop_24"
                    app:tint="#D4FD62"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="See Location Detail"
                    android:textSize="15sp"
                    android:textColor="#D4FD62"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="center"
                    />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#4A4A4A"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="5dp"
            />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Review"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:textColor="#0098FF"
            />
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/add_review"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="5dp"
            app:cardCornerRadius="7dp"
            app:cardBackgroundColor="#22242c"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_outline_badge_24"
                    android:padding="10dp"
                    android:background="@drawable/ic_baseline_circle_24"
                    android:backgroundTint="#146AFF"
                    android:layout_margin="5dp"
                    app:tint="#C2E2FF"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add reviews"
                    android:textColor="#fff"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/add_images"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="5dp"
            app:cardCornerRadius="7dp"
            app:cardBackgroundColor="#22242c"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="8dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_outline_badge_24"
                    android:padding="10dp"
                    android:background="@drawable/ic_baseline_circle_24"
                    android:backgroundTint="#146AFF"
                    android:layout_margin="5dp"
                    app:tint="#C2E2FF"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add Images"
                    android:textColor="#fff"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/delete_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="7dp"
            app:cardBackgroundColor="#22242c"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true"
            android:background="#22242c"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="3dp"
                android:gravity="center"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delete Account"
                    android:textSize="15sp"
                    android:textColor="#FF3535"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="center"
                    android:layout_marginVertical="8dp"
                    />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>


</androidx.core.widget.NestedScrollView>

