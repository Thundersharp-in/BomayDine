<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#191B20"
    android:elevation="@dimen/dimen_5dp"
    android:layout_marginBottom="10dp"
    >
    <ImageView
        android:id="@+id/offerBy"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="OFFER Name"
        android:src="@drawable/ic_launcher"
        android:layout_marginTop="10dp"
        android:scaleType="fitStart"
        android:layout_marginHorizontal="@dimen/dimen_10dp"
        />

    <TextView
        android:id="@+id/offer_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_10dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/calibrib"
        android:text="Offer Desc to the offer"
        android:textColor="#BFBFBF" />

    <TextView
        android:id="@+id/offer_text_amt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_10dp"
        android:fontFamily="@font/calibri"
        android:text="Valid on orders with items worth Rs.159 or more."
        android:textColor="#A3A3A3"
        android:textSize="13sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#323232"
        android:layout_marginTop="@dimen/dimen_10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/dimen_10dp"
        android:layout_marginTop="@dimen/dimen_12dp"
        android:layout_marginBottom="@dimen/dimen_12dp"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/offer_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BOMBAYDINE159"
                android:textColor="#ffffff"
                android:textIsSelectable="true"
                android:textSize="12sp"
                android:background="@drawable/offer_code_bg"
                android:paddingEnd="@dimen/dimen_10dp"
                android:paddingStart="@dimen/dimen_10dp"
                android:paddingVertical="@dimen/dimen_7dp"
                android:fontFamily="@font/montserratregular"
                />

        </LinearLayout>
        <TextView
            android:id="@+id/offer_apply"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Apply"
            android:textColor="#FAEB6B"
            android:textSize="13sp"
            android:gravity="end"
            android:layout_gravity="center"
            />

    </LinearLayout>

</LinearLayout>

