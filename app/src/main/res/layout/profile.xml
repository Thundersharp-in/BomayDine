    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textColor="#fff"
        android:fontFamily="@font/calibrib"
        android:textSize="16sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Some random description which is mentioned on the profile of the user at the time of account creation or at the time of upadte "
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:textColor="#AFAFAF"
        android:fontFamily="@font/calibri"
        android:textSize="12sp"
        android:layout_marginHorizontal="10dp"
        android:textStyle="italic"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="10dp"
        >
        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            app:cardElevation="5dp"
            app:cardCornerRadius="7dp"
            app:cardBackgroundColor="#22242c"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_baseline_camera_alt_24"
                    android:padding="10dp"
                    android:background="@drawable/ic_baseline_circle_24"
                    android:backgroundTint="#146AFF"
                    android:layout_margin="5dp"
                    app:tint="#C2E2FF"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Edit Profile Pic"
                    android:textColor="#fff"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    />

            </LinearLayout>


        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            app:cardElevation="5dp"
            app:cardCornerRadius="7dp"
            app:cardBackgroundColor="#22242c"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_baseline_person_pin_24"
                    android:padding="10dp"
                    android:background="@drawable/ic_baseline_circle_24"
                    android:backgroundTint="#146AFF"
                    android:layout_margin="5dp"
                    app:tint="#C2E2FF"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Edit Details"
                    android:textColor="#fff"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    />

            </LinearLayout>


        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:textColor="#0098FF"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:cardBackgroundColor="#22242c"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@drawable/end_round"
                >
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_outline_home_24"
                    android:padding="3dp"
                    android:background="@drawable/ic_baseline_circle_24"
                    android:backgroundTint="#146AFF"
                    app:tint="#C2E2FF"
                    android:layout_marginStart="10dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="30dp"
                    android:orientation="vertical"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginVertical="5dp"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Home"
                        android:drawablePadding="10dp"
                        android:maxLines="1"
                        android:textSize="16sp"
                        android:fontFamily="@font/calibrib"
                        android:textColor="#F6F9FF"
                        android:gravity="center_vertical"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Near some area at some place near a town "
                        android:drawablePadding="10dp"
                        android:fontFamily="sans-serif-condensed"
                        android:textColor="#F6F9FF"
                        android:layout_marginTop="2dp"
                        android:textSize="13sp"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="5dp"
                        />


                </LinearLayout>

            </LinearLayout>


    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="7dp"
        app:cardBackgroundColor="#22242c"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true"
        android:background="#22242c"
        android:layout_marginTop="8dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="8dp"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_outline_pin_drop_24"
                app:tint="#D4FD62"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="See Location Detail"
                android:textSize="15sp"
                android:textColor="#D4FD62"
                android:layout_marginStart="10dp"
                android:layout_gravity="center"
                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

