<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1e2026">


    <com.thundersharp.conversation.core.recyclerview.GridRecyclerView
        android:id="@+id/recycler_view_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:layout_above="@+id/tttrrr"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="8dp"
        app:layoutManager="LinearLayoutManager" />

    <RelativeLayout
        android:id="@+id/tttrrr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginEnd="75dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rounded_rect_bg">


        <EditText
            android:id="@+id/edit_text_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="15dp"
            android:layout_toStartOf="@id/buttonattach"
            android:background="@drawable/rounded_rect_bg"
            android:hint="Type a message"
            android:maxLines="5"
            android:padding="@dimen/padding_small"
            android:textColor="#DFDFDF"
            android:textColorHint="#9C9C9C" />


        <ImageButton
            android:id="@+id/buttonattach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="6dp"
            android:background="@null"
            android:src="@drawable/ic_baseline_attach_file_24"
            android:text="Button"
            app:tint="#C1C1C1" />


    </RelativeLayout>


    <ImageButton
        android:id="@+id/messageSendChat"
        android:layout_width="58dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginEnd="@dimen/margin_small"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rounded_rect_bg"
        android:src="@drawable/ic_outline_send_24"
        app:tint="#fff" />

</RelativeLayout>