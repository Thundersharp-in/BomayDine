<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clipToPadding="false"
    android:paddingVertical="4dp"
    android:paddingStart="15dp"
    android:paddingEnd="60dp">

    <TextView
        android:id="@+id/text_view_user_alphabet"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:text="A"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="27sp"
        android:textColor="#fff"
        android:background="@drawable/circle"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/text_view_user_alphabet"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/text_view_user_alphabet"
        android:textColor="#000"
        android:paddingBottom="4dp"
        android:textSize="13sp"
        android:text="Rose" />

    <TextView
        android:id="@+id/text_view_chat_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_alignLeft="@+id/name"
        android:background="@drawable/chat_other_bg"
        android:textColor="#000"
        android:elevation="7dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:text="How are you doing? This is a long message that should probably wrap."
        android:textSize="14sp" />
</RelativeLayout>